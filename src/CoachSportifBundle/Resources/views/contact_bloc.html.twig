<section id="contact">
    <div class="container text-center">
        <div class="row">

            <H1 class="titre_contact">Me Contacter </H1>

            {% for message in app.session.flashbag.get('success') %}
                <div class="alert alert-dismissible alert-success col-sm-offset-3 col-sm-6">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <p>{{ message|raw }}</p>
                </div>
            {% endfor %}

            <div class="contact_informations col-sm-12 col-md-6">
                    <h4>David Huet - Coach sportif</h4>
                    <p>Sur rennes et ses environs</p>
                    <h4>Téléphone :</h4>
                    <p>06 61 97 86 10</p>
                    <h4>Email :</h4>
                    <p>huet.david@hotmail.fr</p>
            </div>

            <div class="contact_formulaire col-sm-12 col-md-6">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <div class="form-group form-group-lg">
                    {{ form_errors(form.nom) }}
                    <div class="" >
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control','placeholder': 'Nom & Prénom'}}) }}
                    </div>
                </div>

                <div class="form-group form-group-lg">
                    {{ form_errors(form.email) }}
                    <div class="" >
                        {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder': 'Email'}}) }}
                    </div>
                </div>

                <div class="form-group form-group-lg">
                    {{ form_errors(form.message) }}
                    <div class="" >
                        {{ form_widget(form.message, {'attr': {'class': 'form-control custom-textarea','placeholder': 'Votre message'}}) }}
                    </div>
                </div>

                <div class="form-group form-group-lg">
                    <div class="">
                        {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-envoyer'},'label': 'Envoyer'}) }}
                    </div>
                </div>

                {{ form_end(form) }}
            </div>




        </div>
    </div>
</section>
