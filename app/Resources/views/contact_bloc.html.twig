<section id="contact">
    <div class="container text-center">
        <div class="row">

            <H1 class="titre_contact">Me Contacter </H1>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

                <div class="form-group form-group-lg">
                    {{ form_errors(form.nom) }}
                        <div class="col-sm-offset-3 col-sm-6" >
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control','placeholder': 'Nom & Pr√©nom'}}) }}
                        </div>
                </div>

                <div class="form-group form-group-lg">
                    {{ form_errors(form.email) }}
                        <div class="col-sm-offset-3 col-sm-6" >
                            {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder': 'Email'}}) }}
                        </div>
                </div>

                <div class="form-group form-group-lg">
                    {{ form_errors(form.message) }}
                        <div class="col-sm-offset-3 col-sm-6" >
                            {{ form_widget(form.message, {'attr': {'class': 'form-control custom-textarea','placeholder': 'Votre message'}}) }}
                        </div>
                </div>

                <div class="form-group form-group-lg">
                    <div class="">
                        {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-envoyer'},'label': 'Envoyer'}) }}
                    </div>
                </div>

            {{ form_end(form) }}


        </div>
    </div>
</section>
